%p#notice= notice
%h1 Listing Forms Questions
%table
  %thead
    %tr
      %th Title
      %th Position
      %th Set
      %th Field type
      %th Placeholder text
      %th{:colspan => "3"}
  %tbody
    - @forms_questions.each do |forms_question|
      %tr
        %td= forms_question.title
        %td= forms_question.position
        %td= forms_question.set
        %td= forms_question.field_type
        %td= forms_question.placeholder_text
        %td= link_to 'Show', forms_set_question_path(@forms_set, forms_question)
        %td= link_to 'Edit', edit_forms_set_question_path(@forms_set, forms_question)
        %td= link_to 'Destroy', forms_set_question_path(@forms_set, forms_question), method: :delete, data: { confirm: 'Are you sure?' }
%br
  = link_to 'New Question', new_forms_set_question_path
