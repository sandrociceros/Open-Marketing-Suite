= form_for @forms_question, :url => forms_set_questions_path do |f|
  - if @forms_question.errors.any?
    #error_explanation
      %h2
        = pluralize(@forms_question.errors.count, "error")
        prohibited this forms_question from being saved:
      %ul
        - @forms_question.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    %br
      = f.text_area :title
  .field
    = f.label :position
    %br
      = f.number_field :position
  .field
    = f.label :set_id
    %br
      = f.text_field :set_id
  .field
    = f.label :field_type_id
    %br
      = f.text_field :field_type_id
  .field
    = f.label :placeholder_text
    %br
      = f.text_field :placeholder_text
  .actions
    = f.submit
